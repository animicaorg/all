{
  "abiVersion": 1,
  "name": "NameRegistry",
  "functions": [
    {
      "name": "owner",
      "stateMutability": "view",
      "inputs": [],
      "outputs": [
        {
          "type": {
            "abiType": "address"
          },
          "name": "addr"
        }
      ],
      "docs": "Current contract owner (controls set/clear/transferOwnership)."
    },
    {
      "name": "transferOwnership",
      "stateMutability": "nonpayable",
      "inputs": [
        {
          "type": {
            "abiType": "address"
          },
          "name": "newOwner"
        }
      ],
      "outputs": [
        {
          "type": {
            "abiType": "bool"
          },
          "name": "ok"
        }
      ],
      "docs": "Owner-only: transfer ownership to a new address."
    },
    {
      "name": "resolve",
      "stateMutability": "view",
      "inputs": [
        {
          "type": {
            "abiType": "bytes32"
          },
          "name": "name"
        }
      ],
      "outputs": [
        {
          "type": {
            "abiType": "address"
          },
          "name": "addr"
        }
      ],
      "docs": "Return the address mapped to 'name', or the zero-address if unset."
    },
    {
      "name": "has",
      "stateMutability": "view",
      "inputs": [
        {
          "type": {
            "abiType": "bytes32"
          },
          "name": "name"
        }
      ],
      "outputs": [
        {
          "type": {
            "abiType": "bool"
          },
          "name": "present"
        }
      ],
      "docs": "True iff 'name' is currently set to a non-zero address."
    },
    {
      "name": "set",
      "stateMutability": "nonpayable",
      "inputs": [
        {
          "type": {
            "abiType": "bytes32"
          },
          "name": "name"
        },
        {
          "type": {
            "abiType": "address"
          },
          "name": "addr"
        }
      ],
      "outputs": [
        {
          "type": {
            "abiType": "bool"
          },
          "name": "ok"
        }
      ],
      "docs": "Owner-only: map 'name' to 'addr'. Emits NameSet(name, old, addr)."
    },
    {
      "name": "clear",
      "stateMutability": "nonpayable",
      "inputs": [
        {
          "type": {
            "abiType": "bytes32"
          },
          "name": "name"
        }
      ],
      "outputs": [
        {
          "type": {
            "abiType": "bool"
          },
          "name": "ok"
        }
      ],
      "docs": "Owner-only: clear mapping for 'name' (set to zero). Emits NameCleared(name, old)."
