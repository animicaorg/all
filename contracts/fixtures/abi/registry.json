      "inputs": [
        {
          "type": {
            "abiType": "address"
          },
          "name": "previousOwner",
          "indexed": true
        },
        {
          "type": {
            "abiType": "address"
          },
          "name": "newOwner",
          "indexed": true
        }
      ],
