    {
      "name": "trySetIfEmpty",
      "stateMutability": "nonpayable",
      "inputs": [
        {
          "type": {
            "abiType": "bytes32"
          },
          "name": "name"
        },
        {
          "type": {
            "abiType": "address"
          },
          "name": "addr"
        }
      ],
      "outputs": [
        {
          "type": {
            "abiType": "bool"
          },
          "name": "set"
