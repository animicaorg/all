        },
        {
          "type": {
            "abiType": "address"
          },
          "name": "old",
          "indexed": false
        },
        {
          "type": {
            "abiType": "address"
          },
          "name": "addr",
          "indexed": false
        }
      ],
      "docs": "Emitted when a name is set/updated."
    },
    {
      "name": "NameCleared",
      "inputs": [
        {
          "type": {
            "abiType": "bytes32"
          },
          "name": "name",
          "indexed": true
        },
        {
          "type": {
            "abiType": "address"
          },
          "name": "old",
          "indexed": false
        }
