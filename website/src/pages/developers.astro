---
import BaseLayout from "../layouts/BaseLayout.astro";
import InlineLink from "../components/InlineLink.astro";
import CodeBlock from "../components/CodeBlock.astro";

import { links } from "../config/links";

const pageTitle = "Developers — Build with Animica";
const pageDesc =
  "Jump into Animica's post-quantum, useful-work stack: docs, code, RPC endpoints, and Explorer all in one place.";

const githubRepo = "https://github.com/animica-labs/all";
---

<BaseLayout title={pageTitle} description={pageDesc}>
  <section class="mx-auto max-w-3xl px-4 sm:px-6 lg:px-8 py-10 sm:py-14">
    <h1 class="text-3xl sm:text-4xl font-semibold tracking-tight">Developers</h1>
    <p class="mt-3 text-base opacity-80">
      Animica ships a post-quantum stack (Dilithium/SPHINCS+), a deterministic Python VM, and
      useful-work (PoIES) consensus so you can build quickly without sacrificing security.
      Start here to grab docs, source, RPC endpoints, and Explorer links.
    </p>
  </section>

  <section class="mx-auto max-w-5xl px-4 sm:px-6 lg:px-8 grid gap-4 sm:grid-cols-2">
    <div class="rounded-xl border p-5 bg-[var(--bg-elevated)]
                border-[color-mix(in_srgb,var(--text-primary)_/_12%,transparent)]">
      <h2 class="text-lg font-semibold tracking-tight">Documentation</h2>
      <p class="mt-2 text-sm opacity-80">
        Read the canonical guides and specs for nodes, SDKs, VM(Py), and ops.
      </p>
      <div class="mt-3 flex gap-3 flex-wrap">
        <a
          href={links.docs.home?.() ?? "https://docs.animica.org"}
          class="inline-flex items-center gap-2 rounded-lg px-4 py-2 text-sm font-medium
                 bg-[var(--btn-primary-bg,#111)] text-[var(--btn-primary-fg,#fff)]
                 hover:opacity-90 focus-visible:ring-2 focus-visible:ring-offset-2
                 focus-visible:ring-[color-mix(in_srgb,var(--text-primary,_#000)_/_30%,transparent)]"
        >
          Open Docs
        </a>
        <InlineLink href="/docs/get-started" underline>Getting started</InlineLink>
      </div>
    </div>

    <div class="rounded-xl border p-5 bg-[var(--bg-elevated)]
                border-[color-mix(in_srgb,var(--text-primary)_/_12%,transparent)]">
      <h2 class="text-lg font-semibold tracking-tight">Source code</h2>
      <p class="mt-2 text-sm opacity-80">
        Fork the mono-repo, run the devnet stack, and contribute fixes or new features.
      </p>
      <div class="mt-3 flex gap-3 flex-wrap">
        <a
          href={githubRepo}
          class="inline-flex items-center gap-2 rounded-lg px-4 py-2 text-sm font-medium
                 bg-[var(--btn-primary-bg,#111)] text-[var(--btn-primary-fg,#fff)]
                 hover:opacity-90 focus-visible:ring-2 focus-visible:ring-offset-2
                 focus-visible:ring-[color-mix(in_srgb,var(--text-primary,_#000)_/_30%,transparent)]"
          target="_blank"
          rel="noopener noreferrer"
        >
          View on GitHub
        </a>
        <InlineLink href="https://github.com/animica-labs/all/tree/main/docs" underline>
          Docs in repo
        </InlineLink>
      </div>
    </div>

    <div class="rounded-xl border p-5 bg-[var(--bg-elevated)]
                border-[color-mix(in_srgb,var(--text-primary)_/_12%,transparent)]">
      <h2 class="text-lg font-semibold tracking-tight">RPC endpoints</h2>
      <p class="mt-2 text-sm opacity-80">
        Point your SDKs, curl, or tooling at the configured RPC and explore other networks.
      </p>
      <CodeBlock lang="bash" title="Query head via HTTP">
{`curl -s ${links.rpc.url}/rpc \\
  -H 'content-type: application/json' \\
  -d '{"jsonrpc":"2.0","id":1,"method":"chain.getHead","params":[]}' | jq .`}
      </CodeBlock>
      <p class="mt-3 text-xs opacity-70">
        Current default: <InlineLink href={links.rpc.url} underline noIcon>{links.rpc.url}</InlineLink>
        · Browse more at <InlineLink href="/network" underline>Network</InlineLink>
      </p>
    </div>

    <div class="rounded-xl border p-5 bg-[var(--bg-elevated)]
                border-[color-mix(in_srgb,var(--text-primary)_/_12%,transparent)]">
      <h2 class="text-lg font-semibold tracking-tight">Explorer</h2>
      <p class="mt-2 text-sm opacity-80">
        Inspect blocks, transactions, receipts, and contract state with zero wallet permissions.
      </p>
      <div class="mt-3 flex gap-3 flex-wrap">
        <a
          href={links.explorer.home?.() ?? "https://explorer.animica.org"}
          class="inline-flex items-center gap-2 rounded-lg px-4 py-2 text-sm font-medium
                 bg-[var(--btn-primary-bg,#111)] text-[var(--btn-primary-fg,#fff)]
                 hover:opacity-90 focus-visible:ring-2 focus-visible:ring-offset-2
                 focus-visible:ring-[color-mix(in_srgb,var(--text-primary,_#000)_/_30%,transparent)]"
          target="_blank"
          rel="noopener noreferrer"
        >
          Open Explorer
        </a>
        <InlineLink href="/explorer" underline>Explorer features</InlineLink>
      </div>
    </div>
  </section>
</BaseLayout>
