---
/**
 * AnalyticsPostHog.astro
 * Minimal, opt-in PostHog snippet with sensible defaults.
 *
 * Usage:
 *   <AnalyticsPostHog />
 *   <AnalyticsPostHog key="phc_XXXX" host="https://app.posthog.com" />
 *
 * Reads optional PUBLIC env vars (Vite/Astro):
 *   - PUBLIC_POSTHOG_KEY      (required to enable)
 *   - PUBLIC_POSTHOG_HOST     (default https://app.posthog.com)
 *   - PUBLIC_ANALYTICS_ON_DEV ("true" to enable during `astro dev`)
 *
 * Safe defaults:
 *   - capture_pageview: true
 *   - autocapture: true
 *   - session recording: off by default (set sessionRecording=true to enable)
 *   - respect DNT: true
 */

interface Props {
  /** PostHog project API key (phc_...). Falls back to PUBLIC_POSTHOG_KEY. */
  key?: string;
  /** PostHog host. Falls back to PUBLIC_POSTHOG_HOST or https://app.posthog.com. */
  host?: string;
  /** Force enable/disable. Defaults to enabled if key is present. */
  enabled?: boolean;
  /** Capture a pageview on load. */
  capturePageview?: boolean;
  /** Enable PostHog's autocapture (clicks, etc.). */
  autocapture?: boolean;
  /** Enable session recording (off by default here). */
  sessionRecording?: boolean;
  /** Respect Do Not Track. */
  respectDnt?: boolean;
}

const {
  key = import.meta.env.PUBLIC_POSTHOG_KEY as string | undefined,
  host = (import.meta.env.PUBLIC_POSTHOG_HOST as string | undefined) ?? "https://app.posthog.com",
  enabled = Boolean(import.meta.env.PUBLIC_POSTHOG_KEY),
  capturePageview = true,
  autocapture = true,
  sessionRecording = false,
  respectDnt = true
} = Astro.props as Props;

// Disable in local dev unless explicitly allowed
const dev = import.meta.env.DEV;
const allowInDev = (import.meta.env.PUBLIC_ANALYTICS_ON_DEV as string | undefined)?.toLowerCase() === "true";
const shouldRender = !!key && enabled && (!dev || allowInDev);

// Prepare a small config object to inline safely
const cfg = {
  api_host: host,
  capture_pageview: capturePageview,
  autocapture: autocapture,
  disable_session_recording: !sessionRecording,
  respect_dnt: respectDnt
};
