    <language>en</language>
    <sparkle:publisher>Animica Labs</sparkle:publisher>
    <sparkle:minimumAutoupdateVersion>1.0.0</sparkle:minimumAutoupdateVersion>

    <!-- Latest stable release -->
    <item>
      <title>Animica Explorer 1.0.0</title>
      <sparkle:releaseNotesLink>https://animica.dev/changelog/explorer/1.0.0</sparkle:releaseNotesLink>
      <pubDate>Wed, 08 Oct 2025 12:00:00 +0000</pubDate>
      <enclosure
        url="https://updates.animica.dev/explorer/stable/Animica-Explorer-1.0.0.dmg"
        sparkle:version="1.0.0"
        sparkle:shortVersionString="1.0.0"
        sparkle:os="macos"
        sparkle:minimumSystemVersion="11.0"
        length="REPLACE_WITH_DMG_SIZE_BYTES"
        type="application/octet-stream"
        sparkle:edSignature="REPLACE_WITH_ED25519_SIGNATURE_BASE64"/>
    </item>

