{
  "extends": null,
  "compilerOptions": {
    /* Output & module resolution (Vite/TSX friendly) */
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "noEmit": true,

    /* Libs: UI (DOM), background SW (WebWorker), and modern JS */
    "lib": ["ES2022", "DOM", "DOM.Iterable", "WebWorker"],

    /* JSX for React UIs (popup/onboarding/approve) */
    "jsx": "react-jsx",

    /* Strictness */
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "useUnknownInCatchVariables": true,

    /* Interop & helpers */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* Paths & base url */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* Global types for MV3 + Vite */
    "types": ["chrome", "vite/client"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "scripts/**/*.ts",
    "vitest.config.ts",
    "playwright.config.ts",
    "vite.config.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
