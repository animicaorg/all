{
  "manifest_version": 3,
  "name": "Animica Wallet",
  "description": "Post-quantum wallet with in-page provider (window.animica), tx signing, simulation, and network tools.",
  "version": "0.1.0",
  "action": {
    "default_title": "Animica Wallet",
    "default_popup": "popup.html"
  },

  /* Firefox MV3 notes:
     - As MV3 service workers are still evolving in Firefox, we polyfill by providing a
       classic background script entry. Your build script should emit a Firefox bundle that
       does not rely on import.meta in the background and avoids module-only syntax.
  */
  "background": {
    "scripts": ["background.js"]
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": [
    "storage",
    "notifications",
    "alarms",
    "tabs"
  ],

  "host_permissions": [
    "*://*/*"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/inject.js", "content/bridge.js"],
      "run_at": "document_start"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["provider/index.js"],
      "matches": ["<all_urls>"]
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; base-uri 'self';"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "wallet@animica.dev",
      "strict_min_version": "115.0"
    }
  }
}
