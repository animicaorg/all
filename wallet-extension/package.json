{
  "name": "@animica/wallet-extension",
  "version": "0.1.0",
  "private": true,
  "description": "Animica Wallet â€” MV3 browser extension with in-page provider, PQ keyring, simulation, and approvals.",
  "type": "module",
  "author": "Animica",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=18.17"
  },
  "scripts": {
    "dev": "tsx scripts/dev.ts",
    "build": "echo \"Choose a target: build:chrome or build:firefox\" && exit 1",
    "build:chrome": "rimraf dist/chrome && cross-env TARGET=chrome tsx scripts/build.ts chrome",
    "build:firefox": "rimraf dist/firefox && cross-env TARGET=firefox tsx scripts/build.ts firefox",
    "test": "vitest run --passWithNoTests",
    "test:ui": "vitest --ui",
    "e2e": "playwright test",
    "e2e:headed": "playwright test --headed",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier -w .",
    "typecheck": "tsc -p tsconfig.json"
  },
  "dependencies": {
    "zustand": "^4.5.2",
    "zod": "^3.23.8",
    "msgpackr": "^1.10.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@types/chrome": "^0.0.279",
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "@vitejs/plugin-react": "^4.3.2",
    "autoprefixer": "^10.4.20",
    "chokidar": "^3.6.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.35.0",
    "jsdom": "^24.1.0",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vite": "^5.4.8",
    "vitest": "^2.1.3"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions"
  ]
}
