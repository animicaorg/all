      "unsigned": {
        "chainId": "animica-devnet-1",
        "from": "anim1qxy2kgdygjrsqtzq2n0yrf2493p83kkfjhx0l5",
        "nonce": 1,
        "gasLimit": 50000,
        "maxFee": "250000",
        "kind": "transfer",
        "to": "anim1qqqsyqcyq5rqwzqfpg4dqqp9l3s0g7p7k9j3y0",
        "amount": "1000000000000000000"
      },
      "expect": {
        "domainTag": "ANIMICA_TX_SIGN_V1",
