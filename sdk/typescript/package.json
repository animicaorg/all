{
  "name": "@animica/sdk",
  "version": "0.1.0",
  "description": "Animica TypeScript SDK â€” JSON-RPC, wallet, contracts, DA/AICF/Randomness clients, and light-client verification.",
  "license": "Apache-2.0",
  "type": "module",
  "private": false,
  "sideEffects": false,
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "vite build && tsc -p tsconfig.json --emitDeclarationOnly --declaration --outDir dist",
    "dev": "vite build --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "prepublishOnly": "npm run clean && npm run build && npm run test"
  },
  "engines": {
    "node": ">=18.17"
  },
  "publishConfig": {
    "access": "public"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/animica"
  },
  "repository": {
    "type": "git",
    "url": "https://example.com/animica/monorepo.git",
    "directory": "sdk/typescript"
  },
  "bugs": {
    "url": "https://example.com/animica/issues"
  },
  "keywords": [
    "animica",
    "blockchain",
    "json-rpc",
    "sdk",
    "typescript",
    "wallet",
    "contracts",
    "da",
    "aicf",
    "randomness",
    "light-client"
  ],
  "peerDependencies": {
    "typescript": ">=5.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^2.0.0",
    "esbuild": "^0.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.5.1",
    "playwright": "^1.46.0",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.0",
    "vite": "^5.4.0",
    "vitest": "^2.0.0"
  }
}
