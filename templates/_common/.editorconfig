# ------------------------------------------------------------------------------
# EditorConfig: consistent whitespace & newline rules across the repo
# See: https://editorconfig.org
# This file is intended to be reused across Animica templates.
# ------------------------------------------------------------------------------
root = true

# ------------------------------------------------------------------------------
# Defaults for all files
# ------------------------------------------------------------------------------
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# ------------------------------------------------------------------------------
# Makefiles: tabs are required by make
# ------------------------------------------------------------------------------
[Makefile]
indent_style = tab
indent_size = 4

# ------------------------------------------------------------------------------
# Markdown: keep trailing spaces (line-breaks), no soft wrap enforcement
# ------------------------------------------------------------------------------
[*.md]
trim_trailing_whitespace = false
max_line_length = off
indent_size = 2

# ------------------------------------------------------------------------------
# YAML
# ------------------------------------------------------------------------------
[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

# ------------------------------------------------------------------------------
# JSON & JSONC (tsconfig.json etc.) â€” 2-space canonical
# ------------------------------------------------------------------------------
[*.json]
indent_size = 2

[*.jsonc]
indent_size = 2

# Specific common JSON files
[package.json]
indent_size = 2

[tsconfig.json]
indent_size = 2

# ------------------------------------------------------------------------------
# JavaScript / TypeScript (browser & node)
# ------------------------------------------------------------------------------
[*.js]
indent_size = 2

[*.jsx]
indent_size = 2

[*.mjs]
indent_size = 2

[*.cjs]
indent_size = 2

[*.ts]
indent_size = 2

[*.tsx]
indent_size = 2

# Common config filenames (rollup.config.js, vite.config.ts, etc.)
[*.config.js]
indent_size = 2

[*.config.cjs]
indent_size = 2

[*.config.ts]
indent_size = 2

# ------------------------------------------------------------------------------
# Python (aligns with Black defaults for line length)
# ------------------------------------------------------------------------------
[*.py]
indent_size = 4
max_line_length = 88

# ------------------------------------------------------------------------------
# Rust & TOML
# (rustfmt will handle formatting, but keep editor indent consistent)
# ------------------------------------------------------------------------------
[*.rs]
indent_size = 4

[*.toml]
indent_size = 4

# ------------------------------------------------------------------------------
# Shell scripts
# ------------------------------------------------------------------------------
[*.sh]
indent_size = 2

# ------------------------------------------------------------------------------
# Dockerfiles
# ------------------------------------------------------------------------------
[Dockerfile]
indent_size = 2

[Dockerfile.*]
indent_size = 2

# ------------------------------------------------------------------------------
# CDDL & JSON Schemas used in specs
# ------------------------------------------------------------------------------
[*.cddl]
indent_size = 2

[*.schema.json]
indent_size = 2

# ------------------------------------------------------------------------------
# Stylesheets
# ------------------------------------------------------------------------------
[*.css]
indent_size = 2

[*.scss]
indent_size = 2

[*.less]
indent_size = 2

# ------------------------------------------------------------------------------
# INI & misc configs
# ------------------------------------------------------------------------------
[*.ini]
indent_size = 2

# ------------------------------------------------------------------------------
# Plain text & documentation snippets
# ------------------------------------------------------------------------------
[*.txt]
indent_size = 2
