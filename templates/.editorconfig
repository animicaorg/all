# EditorConfig helps maintain consistent coding styles across editors/IDEs.
# This file is scoped to the templates/ subtree and is safe to copy to other
# packages. See https://editorconfig.org

root = true

# ──────────────────────────────────────────────────────────────────────────────
# Defaults (apply to all files unless overridden below)
# ──────────────────────────────────────────────────────────────────────────────
[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# Keep indentation predictable
indent_style = space
indent_size = 2

# ──────────────────────────────────────────────────────────────────────────────
# JSON (template index, schema files, manifests)
# ──────────────────────────────────────────────────────────────────────────────
[*.json]
indent_style = space
indent_size = 2

# Some editors match this more specifically; keep it explicit.
[*.schema.json]
indent_style = space
indent_size = 2

# JSONC (if used for local values or examples with comments)
[*.jsonc]
indent_style = space
indent_size = 2

# ──────────────────────────────────────────────────────────────────────────────
# YAML (aux config or values files that might live alongside templates)
# ──────────────────────────────────────────────────────────────────────────────
[*.yml]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2

# ──────────────────────────────────────────────────────────────────────────────
# Markdown (preserve deliberate two-space line breaks)
# ──────────────────────────────────────────────────────────────────────────────
[*.md]
trim_trailing_whitespace = false
insert_final_newline = true
indent_style = space
indent_size = 2

# ──────────────────────────────────────────────────────────────────────────────
# Shell & Make (rare inside templates/, but covered for tooling scripts)
# ──────────────────────────────────────────────────────────────────────────────
[*.sh]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
# indent_size is ignored when tabs are used, but some editors like it set:
tab_width = 4

# ──────────────────────────────────────────────────────────────────────────────
# TypeScript/JavaScript (if helper generators or demos are present)
# ──────────────────────────────────────────────────────────────────────────────
[*.{ts,tsx,js,mjs,cjs}]
indent_style = space
indent_size = 2

# ──────────────────────────────────────────────────────────────────────────────
# Python (occasionally used for small generators)
# ──────────────────────────────────────────────────────────────────────────────
[*.py]
indent_style = space
indent_size = 4

# ──────────────────────────────────────────────────────────────────────────────
# TOML (tool configs)
# ──────────────────────────────────────────────────────────────────────────────
[*.toml]
indent_style = space
indent_size = 2

# ──────────────────────────────────────────────────────────────────────────────
# Binary & bundled artifacts (avoid touching whitespace/newlines)
# ──────────────────────────────────────────────────────────────────────────────
[*.{png,jpg,jpeg,gif,svg,ico,zip,tar,tgz,tar.gz,wasm,woff,woff2}]
insert_final_newline = false
trim_trailing_whitespace = false
end_of_line = lf
